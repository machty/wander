{{#util/resize-element class="display-view-map-section"
                       targetClass="ember-cli-g-map"}}
  {{#events-maps-data-source events=sortedEvents
                        highlightEvent=(action "highlightEvent")
                        as |map|}}
    {{g-maps name="my-map"
             lat=map.lat
             lng=map.lng
             zoom=map.zoom
             markers=map.markers
             polylines=map.polylines
             mapType=map.type}}
  {{/events-maps-data-source}}
{{/util/resize-element}}
